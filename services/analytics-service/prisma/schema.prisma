generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum NotificationType {
  APPROVAL_REQUEST
  APPROVAL_APPROVED
  APPROVAL_REJECTED
  TASK_ASSIGNED
  TASK_DUE_SOON
  MEETING_REMINDER
  SYSTEM
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  link      String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  readAt    DateTime?

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}
